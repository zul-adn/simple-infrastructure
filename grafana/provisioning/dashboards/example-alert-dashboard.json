{
  "dashboard": {
    "title": "Simple Alert Dashboard",
    "panels": [
      {
        "title": "Service Status",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [{
          "expr": "up{job=\"express-api\"}",
          "instant": true
        }],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "mappings": [
              {"type": "value", "options": {"0": "DOWN", "1": "UP"}}
            ]
          }
        }
      },
      {
        "title": "Error Rate",
        "type": "gauge",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [{
          "expr": "rate(http_errors_total[5m])",
          "instant": true
        }],
        "fieldConfig": {
          "defaults": {
            "max": 1,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.05, "color": "yellow"},
                {"value": 0.1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Response Time (P95)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [{
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
          "instant": true
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.5, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Active Alerts",
        "type": "alertlist",
        "gridPos": {"x": 0, "y": 4, "w": 24, "h": 6},
        "options": {
          "show": "current",
          "limit": 10
        }
      }
    ],
    "refresh": "10s"
  }
}